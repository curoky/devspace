[Unit]
Description=OpenBSD Secure Shell server
Documentation=man:sshd(8) man:sshd_config(5)
After=network.target auditd.service
ConditionPathExists=!/etc/ssh/sshd_not_to_be_run

[Service]
EnvironmentFile=-/etc/default/ssh
ExecStartPre=/nix/var/nix/profiles/default/bin/sshd -t -f /o/dotbox/config/sshd/sshd_config.conf
ExecStart=/nix/var/nix/profiles/default/bin/sshd -D $SSHD_OPTS -f /o/dotbox/config/sshd/sshd_config.conf
ExecReload=/nix/var/nix/profiles/default/bin/sshd -t -f /o/dotbox/config/sshd/sshd_config.conf
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartPreventExitStatus=255
Type=notify

[Install]
WantedBy=multi-user.target
